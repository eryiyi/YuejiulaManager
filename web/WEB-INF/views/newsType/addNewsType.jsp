<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <span>添加类别</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <h4 class="page-header">类别详情</h4>

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">类别名称</label>

                        <div class="col-sm-4">
                            <input type="text" id="type_name" class="form-control" placeholder="类别名称"
                                   data-toggle="tooltip" data-placement="bottom" title="Tooltip for name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="button" class="btn btn-primary" onclick="saveAdvert()">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function saveAdvert() {
        var typeName = $("#type_name").val();
        if (typeName.replace(/\s/g, '') == '') {
            alert("类别名称不能为空");
            return;
        }
        $.ajax({
            cache: true,
            type: "POST",
            url: "/addNewsType.do",
            data: {"name": typeName},
            async: false,
            success: function (_data) {
                var data = $.parseJSON(_data);
                if (data.success) {
                    alert("添加成功");
                    window.location.href = "#module=listNewsType"+ "&_t="+ new Date().getTime();
                } else {
                    var _case = {1: "类别名称不能为空", 2: "保存失败"};
                    alert(_case[data.code])
                }
            }
        });
    }
    ;
</script>


